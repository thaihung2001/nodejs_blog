<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
         <div class="form-group">
    <label for="name">Tên khóa học</label>
    <input type="text" class="form-control"  name="name" value="{{course.name}}" id="inputAddress2" >
  </div>
   <div class="form-group">
    <label for="content">Nội dung</label>
    <textarea name="content" id="" class="form-control" cols="20" rows="5">{{course.content}}</textarea>
  </div>
   <div class="form-group">
    <label for="videoid">Video ID</label>
    <input type="text" class="form-control" name="videoId" value="{{course.videoId}}" id="inputAddress2" >
  </div>
   <div class="form-group">
    <label for="level">Trình độ</label>
    <input type="text" class="form-control" name="level" value="{{course.level}}" id="inputAddress2" >
  </div>
  <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>